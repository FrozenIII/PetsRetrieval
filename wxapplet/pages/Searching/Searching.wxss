/* pages/Searching/Searching.wxss */
page{
  background: #FFFAF0
}
.main{ 
  width: 100%; height: 100%; position: relative;  top: -50rpx;
}
.main view { display: inline-block; vertical-align: top; }
.main image {
  box-shadow: 0 0 10rpx gray; border-radius: 8rpx;
}

.origin-image{
  display: flex;
  justify-content: center;
}

.description-wrapper {
  margin: 40rpx 70rpx 0;

}

.input {
  position: relative;
  top: -25rpx;
}

.txt {
  display: flex;
  align-items: center;
  justify-content: center;  
  font-size: 28rpx;
  line-height: 2;
  color: gray;
}

.i-divider-mart {
  position: relative;
  top: -55rpx;
}

.allBtn {
  display: flex;
  flex-direction: row;
  justify-content: center;
  position: relative;
  top: -35rpx;
}

.box {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}
.free-WaterfallFlow{
  width:94%;
  column-count:2;/*column-count 属性规定元素应该被分隔的列数：*/
}
.free-WaterfallFlow .flex-wrap{
  display: inline-block;
  width:98%;
  margin-bottom:2%;
  border:1px solid #ccc;
  padding:2%;
  padding-top:5%;
  margin-right:2%;
  box-shadow: 0 1px 2px rgba(34, 25, 25, 0.4);
  text-align: center;
}
.flex-wrap image{
  width:95%;
  margin:0 auto;
}
.flex-wrap-text text{
  display: flex;
  text-align: center;
  word-break:break-all; 
  color: #342158; 
  size: 4rpx;
}
.flex-wrap view:nth-child(2){
  font-size:9rpx;
  padding:2% 0;
  color:#717171;
}
.flex-wrap view:nth-child(3){
  font-size:13px;
  padding:2% 0;
  color:#aaa;
  text-align: right;
}